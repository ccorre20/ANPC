<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.eafit.an.interpolation.InterpolationChooseMethodActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <Button
            android:id="@+id/boes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="boesMethod"
            android:text="Based on Equations' Systems"/>

        <Button
            android:id="@+id/nip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="nipMethod"
            android:text="Newton's Interpolating Polynomial"/>

        <Button
            android:id="@+id/nipdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="nipddMethod"
            android:text="N.I.P. with Divided Differences"/>

        <Button
            android:id="@+id/lip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="lipMethod"
            android:text="Lagrange's Interpolating Polynomial"/>

        <Button
            android:id="@+id/nm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="nmMethod"
            android:text="Neville's Method"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
